    private void RegisterActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try{
            PreparedStatement p = c.prepareStatement("insert into project values(?,?)");
           String name=Rname.getText();
           String a = Rpassw.getText();
           String b = RRpas.getText();
           String fin ="";
           if(a.equals(b))
           {
                fin = RRpas.getText();
           }
           else
           {
               JOptionPane.showMessageDialog(null,"Passord does not match");
               try{
                    c.close();
                }
                catch(SQLException ep)
                {
                    System.out.println(ep);
                }
           }
            p.setString(1, name);
            p.setString(2,fin);
            Statement s = c.createStatement();
            int countt = p.executeUpdate();
            if(countt>1)
            {
                JOptionPane.showMessageDialog(null,"user registered sucessfully");
            }
            else
            {
                 JOptionPane.showMessageDialog(null,"user registered sucessfully");
            }
        }
        catch(SQLException e)
        {
            System.out.println(e);
        }
        finally
        {
            if(c!=null)
            {
                try{
                    c.close();
                }
                catch(SQLException ep)
                {
                    System.out.println(ep);
                }
            }
        }
    }                                        

