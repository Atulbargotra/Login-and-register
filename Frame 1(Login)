    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        try{
            PreparedStatement p = c.prepareStatement("select *  from project where email=? and password=?");
           String name=email.getText();
           String pass = passw.getText();
            p.setString(1, name);
            p.setString(2,pass);
            Statement s = c.createStatement();
            ResultSet set = p.executeQuery();
            if(set.next())
             {
                 //JOptionPane.showMessageDialog(null,"Entered suceess");
               this.dispose();
                frame3 obj = new frame3();
               obj.setVisible(true);
             }
             else
             {
                 //JOptionPane.showMessageDialog(null,"User not registered please contact developer",JOptionPane.INFORMATION_MESSAGE);
                 JOptionPane.showMessageDialog(null,"User not registered please register");
             }
            //System.out.println(count+"record inserted"); 
        }
        catch(SQLException e)
        {
            System.out.println(e);
        }
        finally
        {
            if(c!=null)
            {
                try{
                    c.close();
                }
                catch(SQLException ep)
                {
                    System.out.println(ep);
                }
            }
        }
        
        
    }                                        

